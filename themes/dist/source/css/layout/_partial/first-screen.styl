.first-screen-container {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
  background: url("/images/bg.svg") center center / cover no-repeat;

  .content {
    position: relative;
    padding: 30px;
    width: 80%;
    height: 80%;

    .description {
      font-weight: bold;
      font-size: 30px;
      line-height: 60px;
      text-align: center;
    }

    .social-icon-list {
      position: absolute;
      bottom: $component-interspace;
      font-size: 26px;
      left: 50%;
      transform: translateX(-50%);

      .social-icon-item {
        float: left;
        margin-right: 25px;
        cursor: pointer;

        &:last-child {
          margin-right: 0;
        }

      }

    }
  }
}
